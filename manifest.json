{
  "manifest_version": 2,
  "name": "Clarin Sin PayWall",
  "description": "Quita el molesto PayWall de clarin.com y lanacion.com.ar",
  "version": "1.5",
  "icons": { "16": "16x16.png",
             "48": "48x48.png",
             "128": "128x128.png" },
  "permissions": [
    "tabs", 
    "webRequest",
    "webRequestBlocking",
    "*://*.clarin.com/*",
    "*://*.ole.com.ar/*"
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": true
  },

  "content_scripts": [
    {
      "matches": ["*://*.ole.com.ar/*"],
      "js": ["ole.js"],
      "run_at": "document_start"
    },
    {
      "matches": ["*://*.clarin.com/*"],
      "js": ["clarinete.js"],
      "run_at": "document_start"
    },
    {
      "matches": ["*://*.lanacion.com.ar/*"],
      "js": ["lanacion.js"],
      "run_at": "document_start"
    }

  ]
}
